  %p= t('products.advances.sbc.review_ratings')
  %h3= t('products.common_key_features.borrowing_market_securities')
  %p= t('products.advances.sbc.borrowing_market_securities')
  %ul
    %li= t('products.advances.sbc.bms_list.margin_call')
    %li
      = t('products.advances.sbc.bms_list.additional_pledge_reason')
      %ul
        %li= t('products.advances.sbc.bms_list.falls_below')
        %li= t('products.advances.sbc.bms_list.sufficient_excess')
    %li= t('products.advances.sbc.bms_list.current_borrowing')
    %li= t('products.advances.sbc.bms_list.margin_requirement')
    %li= t('products.advances.sbc.bms_list.not_release')
  %h3= t('products.common_key_features.delivery')
  %p= t('products.advances.sbc.delivery')
  %h3= t('products.common_key_features.substitution')
  %p= t('products.advances.sbc.substitution')
  = render 'sbc_eligible_securities'
  .last-modified= t('products.section_headings.last_modified', date: fhlb_date_short_alpha(@last_modified))