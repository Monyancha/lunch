= render layout: 'product_page' do
  %h1= t('products.advances.sbc.title')
  %p= t('products.advances.sbc.description')
  %h2= t('products.section_headings.uses')
  %ul
    %li= t('products.advances.sbc.uses.secure')
    %li= t('products.advances.sbc.uses.action')
    %li= t('products.advances.sbc.uses.leverage')
  %h2= t('products.section_headings.advantages')
  %ul
    %li= t('products.advances.sbc.advantages.pricing')
    %li= t('products.advances.sbc.advantages.calls')
    %li= t('products.advances.sbc.advantages.substitute')
  %h2= t('products.section_headings.features')
  %h3= t('products.common_key_features.maximum_term')
  %p= t('products.advances.sbc.maximum_term')
  %h3= t('products.common_key_features.credit_products_available')
  %ul
    %li= t('products.advances.sbc.credit_products_available.fixed')
    %li= t('products.advances.sbc.credit_products_available.frc')
    %li= t('products.advances.sbc.credit_products_available.amortizing')
