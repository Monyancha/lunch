  %p= t('products.advances.sbc.interest_rate')
  %h3= t('products.common_key_features.interest_day_count')
  %p= t('products.advances.sbc.interest_day_count')
  %h3= t('products.common_key_features.interest_payment_frequency')
  %p= t('products.advances.sbc.interest_payment_frequency')
  %h3= t('products.common_key_features.market_value')
  %p= t('products.advances.sbc.market_value')
  %h3= t('products.common_key_features.agency_cmo_accrual_bonds')
