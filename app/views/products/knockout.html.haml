= render layout: 'product_page' do
  %h1= t('products.advances.knockout.title')
  %p= simple_format(t('products.advances.knockout.description'))
  %h2= t('products.section_headings.uses')
  %ul
    %li= t('products.advances.knockout.uses.lower')
    %li= t('products.advances.knockout.uses.link')
  %h2= t('products.section_headings.advantages')
  %ul
    %li= t('products.advances.knockout.advantages.lower')
    %li= t('products.advances.knockout.advantages.transparency')
  %h2= t('products.section_headings.features')
  %p= t('products.advances.knockout.features')
  %h3= t('products.common_key_features.eligibility')
  %p= t('products.advances.knockout.eligibility_html', download_link: link_to_download_resource(t('downloads.statement_of_authority.putable_advances'), resources_download_path(file: :form_2161)))
  %h3= t('products.common_key_features.early_termination')
  %p= t('products.advances.knockout.early_termination')
  %h3= t('products.common_key_features.total_max_per_borrow')
  %p= t('products.advances.knockout.total_max_per_borrow')
  %h3= t('products.common_key_features.maximum_term')
