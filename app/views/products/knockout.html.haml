  %h3= t('products.common_key_features.interest_day_count')
  %p= t('products.advances.knockout.interest_day_count')
  %h3= t('products.common_key_features.interest_payment_frequency')
  %p= t('products.advances.knockout.interest_payment_frequency')
  %h3= t('products.common_key_features.lockout_period')
  %p= t('products.advances.knockout.lockout_period')
  %h3= t('products.common_key_features.knockout_dates_observe_period')
  %p= t('products.advances.knockout.knockout_dates_observe_period')
  %h3= t('products.common_key_features.interest_strike_rate')
  %p= t('products.advances.knockout.interest_strike_rate')
  %h3= t('products.common_key_features.prepayment_features')
  %p= t('products.advances.knockout.prepayment_features_html', download_link: link_to_download_resource(t('downloads.statement_of_authority.partial_prepayment_symmetry'), resources_download_path(file: :form_2215)))
