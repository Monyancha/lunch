- picture_url ||= nil
= mail_to(email, class: 'dashboard-contact') do
  .dashboard-contact-avatar{style: picture_url ? "background-image: url(#{picture_url})" : nil}
  .dashboard-contact-details
    = render 'dashboard/dashboard_icon', icon: :phone, alt_text: t('dashboard.contacts.icon_alt_text')
    %h2= title
    %p= name
    %p= phone_number