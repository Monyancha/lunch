-@title = title
-@action = action_type ||= nil
-@classes = classes ||= nil
%section.dashboard-module{class: @classes}
  %header
    %h1= @title
    - if @action && @action['button']
      %button.primary-button= t("dashboard.actions.#{@action.gsub('-button', '')}")
    - elsif @action && @action['icon']
      .icon= t("dashboard.actions.#{@action.gsub('-icon', '')}")
  .dashboard-module-content
    =yield