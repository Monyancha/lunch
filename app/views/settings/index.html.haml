- setting_types = %w(account password quick_advance quick_report email)
- email_options = %w(reports investor_relations miscellaneous products credit technical community)
.row.settings-page-row
  %aside.sidebar.column-2x10-left
    %ul
      %li.sidebar-label= t('settings.title')
      - setting_types.each do |setting_type|
        %li
          =link_to t("settings.#{setting_type}.title"), '#', class: "#{'active' if setting_type == 'email'}"
  .settings-page-main-content
    .column-2x10-right
      %section.settings-email
        %h1= t('settings.email.header')
        %table
          - email_options.each_with_index do |email_option, index|
            - url = t("settings.email.#{email_option}.url") if t("settings.email.#{email_option}.url")
            %tr{class: "settings-email-#{email_option}-row #{'settings-item-required' if index == 1}"}
              %td= t("settings.email.#{email_option}.title")
              - if index == 1
                %td= render 'shared/check_box', id: "settings_email_options_#{email_option}", checked: true, disabled: true
              - else
                %td= render 'shared/check_box', id: "settings_email_options_#{email_option}"
              %td
                =t("settings.email.#{email_option}.description_html", url: url)
                %p.settings-selected-item-message= t('settings.email.selected_item_message', url: '#')
                %p.settings-required-item-message= t('settings.email.required_item_message_html', url: '#')
        %button.primary-button.save-button= t('settings.save')
        %p.settings-save-message
          = t('settings.save_message')
          %span.settings-save-message-timestamp