- relationship_manager = @contacts[:rm] || {}
- walkthrough_mode = !policy(:letters_of_credit).execute?
.letters-of-credit.letters-of-credit-preview
  .row
    .column-9x3-left
      %h1= @title
      - if @error_message
        .form-error-section
          %p= @error_message
  .row
    = content_with_sidebar([{name: 'borrowing_capacity', locals: {profile: @profile}}, {name: 'contact', locals: {relationship_manager: relationship_manager, text: t('letters_of_credit.contact')}}]) do
      = form_for(@letter_of_credit_request, url: letters_of_credit_execute_path, html: {class: 'letter-of-credit-request-form', data: {securid_status: @securid_status, 'prevent-submit-on-enter' => true}}) do |f|
        = f.hidden_field(:id)
        .form-summary-data
          %dl
            %dt= t('global.defined_term', term: t('letters_of_credit.request.beneficiary'))
            %dd= @letter_of_credit_request.beneficiary_name
          %dl
            %dt= t('global.defined_term', term: t('letters_of_credit.preview.beneficiary_address'))
            %dd= simple_format(@letter_of_credit_request.beneficiary_address)
          %dl
            %dt= t('global.defined_term', term: t('letters_of_credit.request.amount'))
            %dd= fhlb_formatted_currency_whole(@letter_of_credit_request.amount)
          %dl
            %dt= t('global.defined_term', term: t('letters_of_credit.preview.issue_date'))
            %dd= fhlb_date_standard_numeric(@letter_of_credit_request.issue_date)
            %dt= t('global.defined_term', term: t('letters_of_credit.manage.expiration_date'))
            %dd= fhlb_date_standard_numeric(@letter_of_credit_request.expiration_date)
          %dl
            %dt= t('global.defined_term', term: t('letters_of_credit.request.fees.issuance_fee'))
            %dd= fhlb_formatted_currency_whole(@letter_of_credit_request.issuance_fee)
            %dt= t('global.defined_term', term: t('letters_of_credit.request.fees.maintenance_fee'))
            %dd= @letter_of_credit_request.maintenance_fee
        -if @error_message
          .letters-of-credit-error-actions
            = link_to(t('letters_of_credit.success.new_request'), letters_of_credit_request_path, class: 'primary-button')
        -else
          .letters-of-credit-legal-copy=simple_format(t'letters_of_credit.preview.legal')
          - if @session_elevated
            %p= t('letters_of_credit.preview.review_details_elevated')
          - else
            %p= t('letters_of_credit.preview.review_details')
          - unless @session_elevated || walkthrough_mode
            = render 'shared/securid_module', autofocus: true
          .request-form-actions
            = link_to(t('global.cancel'), letters_of_credit_manage_path, class: 'secondary-button')
            = link_to(t('letters_of_credit.preview.edit'), letters_of_credit_request_path(letter_of_credit_request: {id: @letter_of_credit_request.id}), class: 'secondary-button')
            = f.submit({class: ["primary-button perform-advance-form #{'active' if @session_elevated}"], value: t('letters_of_credit.preview.authorize'), disabled: (!@session_elevated && !walkthrough_mode)})