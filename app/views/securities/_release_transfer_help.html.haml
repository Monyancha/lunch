%p.securities-download= t('securities.release.edit.title')
.securities-download-instructions.fade{data: {dropzone: true, hide_on_error: true}}
  %p= t('securities.release.edit.intro')
  %p.securities-download-instructions-step= t('securities.release.edit.step_1.title')
  - download_link = link_to t('securities.release.edit.step_1.link_title'), download_path, class: [ 'securities-release-download' ], data: {'form-submit-trigger' => true, 'form-name' => 'securities-release-download'}
  %p.securities-download-instructions-description= t('securities.release.edit.step_1.description_html', link: download_link )
  %p.securities-download-instructions-step= t('securities.release.edit.step_2.title')
  %p.securities-download-instructions-description= t('securities.release.edit.step_2.description_html', mailto_url: @contact[:email_address], mailto_text: @contact[:mailto_text], phone_number: @contact[:phone_number])
  .securities-download-actions
    - span = capture_haml do
      %span= t('securities.release.edit.drag_drop')
    - button = capture_haml do
      .input-file-button-wrapper
        %button.secondary-button= t('securities.release.edit.select_file')
        %input#fileupload{type: "file", name: "file", accept: accepted_upload_mimetypes, data: {url: upload_path, 'results-container-class' => 'securities-release-table-wrapper', 'form-name' => 'securities-release-download', 'input-name' => 'securities', 'error-class' => 'securities-request-upload-error', 'success-class' => 'securities-request-upload-success'}}
    =t('securities.release.edit.download_actions_html', span: span, button: button)
  .file-upload-progress
    %p{data: {cancel_upload: true}}= t('global.cancel_upload')
    %p= t('global.uploading')
    .gauge-section
      .inner-gauge-section