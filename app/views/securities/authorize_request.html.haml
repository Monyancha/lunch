- @page_title = t('global.page_meta_title', title: @title)
.securities.row
  .securities-header
    %h1= @title
  .securities-main-body.securities-authorize-success
    %section.securities-success.icon-success-before
      =simple_format(t('securities.authorize.confirmation', date: fhlb_datetime_long_alpha_with_on(Time.zone.now)))
      %p=t('securities.authorize.pdf')
      %p=t('securities.authorize.contact_html', mailto_url: @contact[:email_address], mailto_text: @contact[:mailto_text], phone_number: @contact[:phone_number])
    %section.securities-success-actions
      = link_to(t('securities.success.buttons.manage'), securities_manage_path, class: 'secondary-button')
      = link_to(t('securities.success.buttons.view'), securities_requests_path, class: 'secondary-button')