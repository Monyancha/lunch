= render layout: 'welcome' do
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'welcome-login'}) do |f|
    %fieldset
      %legend= t('global.login')
      - if flash[:alert].present?
        .form-error= flash[:alert]
      = render 'shared/input_field', form_builder: f, field_name: :username, label: t('global.username')
      = render 'shared/input_field', form_builder: f, field_name: :password, field_type: :password_field, label: t('global.password')
      = link_to(t('welcome.forgot_password'), new_user_password_path)
      = f.submit t('global.login'), class: 'primary-button'