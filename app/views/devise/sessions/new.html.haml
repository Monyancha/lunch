= render layout: 'welcome' do
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'welcome-login'}) do |f|
    %fieldset
      %legend= t('global.login')
      - if flash[:alert].present?
        .form-error= flash[:alert]
      - if flash[:notice].present?
        .form-flash-message{data:{type: :success}}= flash[:notice]
      = render 'shared/input_field', form_builder: f, field_name: :username, label: t('global.username'), html_attributes: {autofocus: true, tabindex: 1}
      = render 'shared/input_field', form_builder: f, field_name: :password, field_type: :password_field, label: t('global.password'), html_attributes: {tabindex: 2}
      = link_to(t('welcome.forgot_password'), new_user_password_path, tabindex: 4)
      = f.submit t('global.login'), class: 'primary-button', tabindex: 3