- dropdown_name ||= ''
- default_value ||= ''
- default_text ||= ''
- include_blank ||= false
- disabled ||= false
- dropdown_options ||= []
- classes ||= []
- classes = Array.wrap(classes)
- if dropdown_options.length <= 1
  - classes << 'single-item-dropdown'
- calculate_width ||= nil
.input-field-container.icon-chevron-after.single-choice-dropdown.dropdown{class: classes, :'data-dropdown-calc-width' => calculate_width, 'disabled' => disabled, 'data-default-text' => default_text}
  = select_tag(dropdown_name, options_for_select(dropdown_options, default_value), include_blank: include_blank)
  .dropdown-selection= default_text
  %ul
    - dropdown_options.each do |label, value|
      %li{data: {dropdown: {value: value}}}= label