- header_template ||= 'layouts/header'
!!!
%html{class: @html_class}
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", :'http-equiv' => "X-UA-Compatible"}
    %title= @page_title || 'FHLB Member Portal'
    = stylesheet_link_tag "application", media: "all"
    = javascript_include_tag  "application"
    = csrf_meta_tags
  %body
    %header.page-header= render header_template
    %main
      = yield
    .flyout-row
      .column-1
        .flyout
          .flyout-top-section
            .flyout-close-button.icon-close-before
          .flyout-bottom-section
    .flyout-background