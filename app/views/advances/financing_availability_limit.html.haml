= render layout: 'add_advance' do
  = form_for(:advance_request, url: advances_preview_path, html: {method: :post, class: 'add-advance-form'}) do |f|
    = f.hidden_field(:id)
    = f.hidden_field(:amount, value: @gross_amount)
    = hidden_field_tag(:stock_choice, 'continue')
    .add-advance-financing-availability-limit.row
      .column-9x3-left
        %p.add-advance-action-message= t('dashboard.quick_advance.preview.initiate')
        .add-advance-body
          .add-advance-icon-section.icon-error-before
            %p
              =t('dashboard.quick_advance.financing_availability_limit.intro')
              %br
              =t('dashboard.quick_advance.financing_availability_limit.details')
          .add-advance-summary
            %dl.large_dl
              %dt= t('dashboard.quick_advance.financing_availability_limit.amount_requested') +':'
              %dd= fhlb_formatted_currency(@advance_amount, precision: 0)
              %dt= t('dashboard.quick_advance.financing_availability_limit.stock') +':'
              %dd= fhlb_formatted_currency(@net_stock_required, precision: 0)
            %dl.large_dl
              %dt= t('dashboard.quick_advance.financing_availability_limit.cumulative') +':'
              %dd= fhlb_formatted_currency(@gross_cumulative_stock_required, precision: 0)
            %p= t('dashboard.quick_advance.financing_availability_limit.debit_sta_html', amount: fhlb_formatted_currency(@gross_net_stock_required, precision: 0))
        .advances-actions
          = link_to(t('global.cancel'), advances_manage_path, class: 'secondary-button cancel-advance')
          = link_to(t('global.edit'), advances_select_rate_path(advance_request: {id: @advance_request_id}), class: 'secondary-button edit-advance-button')
          = f.submit({class: ['primary-button initiate-add-advance active'], value: t('dashboard.quick_advance.buttons.continue')})
        %small
          %p.add-advances-footer= t('dashboard.quick_advance.financing_availability_limit.footer')