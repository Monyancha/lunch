- report_url ||=nil
- as_of_date ||=nil
- start_date ||=nil
- end_date ||=nil
- presets ||= []
- single_date_picker ||= false
- max_date ||= false
- open_direction ||= 'right'
- insert_filter ||=nil

= form_tag(report_url, method: 'GET') do
  - if start_date
    = text_field_tag :start_date, start_date, class: 'datepicker-input-field'
  - if end_date
    = text_field_tag :end_date, end_date, class: 'datepicker-input-field'
  - if as_of_date
    = text_field_tag :as_of_date, as_of_date, class: 'datepicker-input-field'
  - if insert_filter
    = yield
  .report-datepicker
    = render 'shared/date_picker', presets: presets, single_date_picker: single_date_picker, max_date: max_date, open_direction: open_direction
  - if !insert_filter
    = yield
