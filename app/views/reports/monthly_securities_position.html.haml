- @html_class = 'white-background'
- @page_title = t('reports.meta_title')
.report.securities-report.expanding-row-table.row
  .report-header
    - if @print_layout
      = render 'print_details', report_name: @report_name, name: @member_name, date: t('datepicker.single.inline_input', date: fhlb_date_standard_numeric(@as_of_date))
    - else
      %h1= @report_name
      = render 'reports_header_buttons', allowed_params: [:securities_filter, :start_date], download_formats: [:xlsx, :pdf]
      = render 'report_details', name: @member_name, freshness: t('reports.pages.securities_position.freshness'), availability: t('reports.availability.months', months: 18)
    .report-inputs
      = render layout: 'reports_date_picker_form', locals: {start_date: @month_end_date, report_url: reports_monthly_securities_position_url, presets: @picker_presets, single_date_picker: true, date_picker_filter: @date_picker_filter, min_date: @min_date, max_date: @max_date} do
        .report-filter
          = render 'shared/dropdown', dropdown_name: 'securities_filter', default_value: @securities_filter, default_text: @securities_filter_text, dropdown_options: @securities_filter_options
  = render 'securities_position', securities_position: @monthly_securities_position