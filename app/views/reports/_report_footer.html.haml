- rows = (footer || []).first.kind_of?(Array)
- if footer
  %tfoot
    - (rows ? footer : [footer]).each do |cells|
      %tr
        - cells.each do |cell|
          - remaining_cells = remaining_cells - 1 if remaining_cells
          = render 'reports/report_cell', cell: cell
        - if remaining_cells
          - remaining_cells.times do
            = render 'reports/report_cell', cell: {}