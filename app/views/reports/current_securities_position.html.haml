- @html_class = 'white-background'
- @page_title = t('reports.meta_title')
.report.securities-report.expanding-row-table.row
  .report-header
    %h1= @report_name
    - if @print_layout
      = render 'print_details', name: @member_name, date: t('datepicker.single.input', date: fhlb_date_standard_numeric(@as_of_date))
    - else
      = render 'reports_header_buttons', allowed_params: :securities_filter, download_formats: [:xlsx, :pdf]
      = render 'report_details', name: @member_name, freshness: t('reports.freshness.current'), availability: t('reports.availability.current')
    .report-inputs
      = form_tag(reports_current_securities_position_url, method: 'GET') do
        .report-filter
          = render 'shared/dropdown', dropdown_name: 'securities_filter', default_value: @securities_filter, default_text: @securities_filter_text, dropdown_options: @securities_filter_options
  = render 'securities_position', securities_position: @current_securities_position
