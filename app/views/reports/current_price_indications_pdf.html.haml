.report.report-price-indications.report-current-price-indications-pdf.row{data: {deferred: @job_status_url, 'deferred-load' => @load_url}}
  .pdf-header
    .header-details
      %h1= @report_name
      %h2= current_member_name
      %p= t('reports.pages.price_indications.current.pdf.date_html', date: fhlb_date_long_alpha(@vrc_date))
      .availability-details= simple_format(t('reports.pages.price_indications.current.summary'))
  - if @whole_report_disabled
    .report-main-body.report-disabled
      %table
        %tr
          %td.dataTables_empty= missing_data_message(@whole_report_disabled)
  - else
    .report-main-body
      .standard-credit-program
        %h2= t('reports.pages.price_indications.standard_credit_program')
        .column
          %h3= t('reports.pages.price_indications.current.pdf.vrc')
          = render 'reports/reports_table', table_class: 'current-price-vrc-table-pdf', table_data: @standard_vrc_table_data, sortable: false
          = render 'reports_table_notes', notes: @standard_vrc_table_data[:notes]
        .column
          %h3= t('reports.pages.price_indications.current.pdf.frc')
          .divided-table
            = render 'reports/reports_table', table_class: 'current-price-frc-table-pdf', table_data: @standard_frc_table_data_1, sortable: false
          .divided-table
            = render 'reports/reports_table', table_class: 'current-price-frc-table-pdf', table_data: @standard_frc_table_data_2, sortable: false
          = render 'reports_table_notes', notes: @standard_frc_table_data_1[:notes]
        .column
          %h3
            = t('reports.pages.price_indications.current.pdf.arc')
            %span= t('reports.pages.price_indications.current.basis_point_spread')
          = render 'reports/reports_table', table_class: 'current-price-arc-table-pdf', table_data: @standard_arc_table_data, sortable: false
          = render 'reports_table_notes', notes: @standard_arc_table_data[:notes_1]
          = render 'reports_table_notes', notes: @standard_arc_table_data[:notes_2]
      .sbc-program
        %h2= t('reports.pages.price_indications.sbc_program')
        .column
          %h3= t('reports.pages.price_indications.current.pdf.vrc')
          = render 'reports/reports_table', table_class: 'current-price-vrc-table-pdf', table_data: @sbc_vrc_table_data, sortable: false
          = render 'reports_table_notes', notes: @sbc_vrc_table_data[:notes]
        .column
          %h3= t('reports.pages.price_indications.current.pdf.frc')
          .divided-table
            = render 'reports/reports_table', table_class: 'current-price-frc-table-pdf', table_data: @sbc_frc_table_data_1, sortable: false
          .divided-table
            = render 'reports/reports_table', table_class: 'current-price-frc-table-pdf', table_data: @sbc_frc_table_data_2, sortable: false
          = render 'reports_table_notes', notes: @sbc_frc_table_data_1[:notes]
        .column
          %h3
            = t('reports.pages.price_indications.current.pdf.arc')
            %span= t('reports.pages.price_indications.current.basis_point_spread')
          = render 'reports/reports_table', table_class: 'current-price-arc-table-pdf', table_data: @sbc_arc_table_data, sortable: false
          = render 'reports_table_notes', notes: @sbc_arc_table_data[:notes_1]
          = render 'reports_table_notes', notes: @sbc_arc_table_data[:notes_2]
      .sta-rate
        %h2= t('reports.pages.price_indications.settlement_transaction_account')
        %table.report-table.sta-rate-table.report-table-vertical-headers{data: {sortable: false}}
          %tbody
            %tr
              %td= @sta_table_data[:row_name]
              %td.report-cell-right.report-cell-expanding= fhlb_formatted_number(@sta_table_data[:row_value], precision: 5)
        %dl
          %dt= t('reports.pages.price_indications.current.interest_day_count')
          %dd= t('reports.pages.price_indications.current.actual_360')
          %dd= t('reports.pages.price_indications.current.sta_info')
      .general-info
        %h2= t('reports.general_information.title')
        %p= t('reports.general_information.same_day_pricing')